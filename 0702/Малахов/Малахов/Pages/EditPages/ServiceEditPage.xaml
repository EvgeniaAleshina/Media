<Page x:Class="Малахов.ServiceEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Малахов"
      mc:Ignorable="d" 
      d:DesignHeight="120" d:DesignWidth="250"
      VerticalAlignment="Center" HorizontalAlignment="Center"
      Title="ServiceEditPage">

    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="17*"/>
			<ColumnDefinition Width="63*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock Text="Название" Grid.Row="0"/>
        <TextBlock Text="Цена" Grid.Row="1"/>
        <TextBox  Text="{Binding Title}" Name="TbTitle" Grid.Column="1" Grid.Row="0" Width="175"/>
        <TextBox  Text="{Binding Cost}" Name="TbCost" Grid.Column="1" Grid.Row="1" Width="175"/>
        <Button Content="Save" Grid.ColumnSpan="2" Grid.Row="5" Height="30" Width="175" Name="BtnSave" Click="BtnSave_Click"/>
	</Grid>
</Page>
